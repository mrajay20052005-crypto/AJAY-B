using System;
using System.Collections;
namespace company
{
    public class Employee
    {
        public string EmployeeName {get;set;}
        public int EmployeeID {get;set;}
        public double Salary {get;set;}
        public Employee(int id, string name, double salary)
        {
            EmployeeID = id;
            EmployeeName = name;
            Salary = salary;
        }
    }
    public class EmployeeDAL
    {
        private ArrayList employees = new ArrayList();
        public bool AddEmployee(Employee e)
        {
            if (e == null)
                return false;

            foreach (Employee emp in employees)
            {
                if (emp.EmployeeID == e.EmployeeID)
                    return false;
            }

            employees.Add(e);
            return true;
        }
        public bool DeleteEmployee(int id)
        {
            foreach (Employee emp in employees)
            {
                if (emp.EmployeeID == id)
                {
                    employees.Remove(emp);
                    return true;
                }
            }
            return false;
        }
        public string SearchEmployee(int id)
        {
            foreach (Employee emp in employees)
            {
                if (emp.EmployeeID == id)
                {
                    return emp.EmployeeName;
                }
            }
            return null;
        }
        public Employee[] GetAllEmployeesListAll()
        {
            Employee[] empArray = new Employee[employees.Count];
            employees.CopyTo(empArray);
            return empArray;
        }
    }
    class Program
    {
        static void Main()
        {
            EmployeeDAL dal = new EmployeeDAL();
            dal.AddEmployee(new Employee(101, "ajay", 45000));
            dal.AddEmployee(new Employee(102, "afra", 55000));
            dal.AddEmployee(new Employee(103, "avjy", 60000));
            Console.WriteLine("Search Employee ID 102: " + dal.SearchEmployee(102));
            Console.WriteLine("\nAll Employees:");
            Employee[] allEmployees = dal.GetAllEmployeesListAll();
            foreach (Employee e in allEmployees)
            {
                Console.WriteLine($"ID: {e.EmployeeID}, Name: {e.EmployeeName}, Salary: {e.Salary}");
            }
            dal.DeleteEmployee(101);
            Console.WriteLine("\nAfter Deleting Employee ID 101:");
            allEmployees = dal.GetAllEmployeesListAll();
            foreach (Employee e in allEmployees)
        {
                Console.WriteLine($"ID: {e.EmployeeID}, Name: {e.EmployeeName}, Salary: {e.Salary}");
        }
        }
    }
}
